<div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag @road_trip.feature_image.url, class:"first-slide" %>
          <div class="container">
            <div class="carousel-caption carousel-caption1" >
              <h1><%= @road_trip.title %></h1>
              <h3><%= @road_trip.user.profile.username %></h3>
              <div class="profile_circle">
              <%= link_to image_tag(@road_trip.user.profile.avatar.url(:thumb), class:"profile_circle"), profile_path(@road_trip.user.profile) %>
            </div>
            </div>
          </div>
        </div>
    </div>

<% if current_user == @road_trip.user %>
  <%= link_to 'Dashboard', edit_road_trip_path(@road_trip) %>
<% end %>

<h1>Planned stops</h1>
<div>
  <% if @road_trip.stops.any? %>
    <% @road_trip.stops.order(:date).each do |stop| %>
      <%= stop.address %><br />
      <%= stop.description %><br />
      <%= stop.date.strftime('%v') %><br />
      <br />
    <% end %>
  <% end %>
</div>

<% if @road_trip.description %>
<p>"<%= @road_trip.description.capitalize %>"</p>
<% end %>

<%= render 'gmap' %>

<% @road_trip.posts.reverse_each do |post| %>
  <% if current_user == post.road_trip.user %>
  <%= link_to 'Edit', edit_post_path(:id => post.id, :road_trip_id => @road_trip.id) %>
  <%= link_to 'x', post_path(post), method: :delete %>
  <%end%>
  <%= distance_of_time_in_words_to_now(post.created_at)%> ago</br>
  <%= post.title %></br>
  <% if post.image.file? %>
    <%= image_tag post.image.url(:medium) %></br>
  <% end %>
  <%= post.body %></br><br>
  <%= link_to 'Add comment', new_comment_path(:id => post.id) %><br>
  <% post.comments.reverse_each do |comment| %>
    <%= link_to comment.user.profile.username, profile_path(comment.user.profile) %>
    <%= distance_of_time_in_words_to_now(comment.created_at) %> ago<br>
    <%= comment.remark %><br>
  <% end %>
<% end %>
