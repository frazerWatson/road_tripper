<h1>Dashboard</h1>

<%= render 'form' %>

<% unless @road_trip.itinerary %>
<%= link_to 'Add itinerary', new_itinerary_path(:id => @road_trip.id) %>
<%= link_to 'Add new post', new_post_path(:id => @road_trip.id) %>
<%= link_to 'View trip profile', road_trip_path(@road_trip.id) %>
<% else %>
<%= link_to 'Edit itinerary', edit_itinerary_path(@road_trip.itinerary.id) %>

<div>
  Origin: <%= @road_trip.itinerary.origin %><br />
  Destination: <%= @road_trip.itinerary.destination %><br />
  Start Date: <%= @road_trip.itinerary.start_date %><br />
  End Date: <%= @road_trip.itinerary.end_date %><br />
</div>
<% end %>

