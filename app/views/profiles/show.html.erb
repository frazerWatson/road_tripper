<div class="centered-form">

  <p>
    <%= image_tag @profile.avatar.url(:thumb), class:"profile_circle" %></br>
  </p>
  <p>
    <strong>Username:</strong>
    <%= @profile.username %>
  </p>
  <p>
    <strong>Hometown:</strong>
    <%= @profile.hometown %>
  </p>
  <p>
    <strong>First name:</strong>
    <%= @profile.first_name %>
  </p>
  <p>
    <strong>Last name:</strong>
    <%= @profile.last_name %>
  </p>

  <% if current_user %>
  <% if current_user.id == @profile.user_id %>
  <%= link_to 'Edit', edit_profile_path(@profile) %>
  <% end %>
  <% end %>

  <h3>View this user's road trips</h3><br />
  <% if @profile.user.road_trips.any? %>
  <% @profile.user.road_trips.each do |road_trip| %>
  <h5><%= road_trip.title %></h5>
  <p><%= link_to 'View trip', road_trip %></p>
  <% end %>
  <% end %>
</div>